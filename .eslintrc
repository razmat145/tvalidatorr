{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "@typescript-eslint/ban-types": [
            "error",
            {
                "types": {
                    "Function": false
                },
                "extendDefaults": true
            }
        ],
        "no-case-declarations": 0,
        "no-unsafe-optional-chaining": 1
    }
}